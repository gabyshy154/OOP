@using Microsoft.AspNetCore.Components.Routing
@using MeetAgain.Components.UI
@using MeetAgain.Layout
@using Microsoft.AspNetCore.Components

<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="routeData">
        <ErrorBoundary>
            <ChildContent>
                <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
            </ChildContent>
            <ErrorContent>
                <div class="min-h-screen flex items-center justify-center bg-neutral-50 text-center p-6">
                    <h1 class="text-2xl font-bold text-red-600 mb-2">Something went wrong</h1>
                    <p class="text-gray-600 mb-4">An error occurred while loading this page.</p>
                    <a href="/" class="btn btn-primary">Go to Dashboard</a>
                </div>
            </ErrorContent>
        </ErrorBoundary>
    </Found>
    <NotFound>
        <PageTitle>Not Found</PageTitle>
        <div class="main-content">
            <div class="card text-center">
                <h1 class="card-header">404 - Page Not Found</h1>
                <p class="text-muted">The page you're looking for doesn't exist.</p>
                <a href="/" class="btn btn-primary mt-3">Go to Dashboard</a>
            </div>
        </div>
    </NotFound>
</Router>

@code {
    // Optional: Redirect /home to / to avoid confusion
    [Inject] private NavigationManager Navigation { get; set; } = default!;

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender && Navigation.Uri.EndsWith("/home"))
        {
            Navigation.NavigateTo("/");
        }
    }
}
